<p id="notice"><%= notice %></p>

<h1>Listing Novels</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @novels.each do |novel| %>
      <tr>
        <td><%= novel.id %></td>
        <td><%= novel.title %></td>
        <td><%= novel.description %></td>
        <td><%= novel.author_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Novel', new_novel_path %>
